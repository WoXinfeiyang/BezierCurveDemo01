<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rly_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <FrameLayout
        android:id="@+id/fly_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:paddingRight="30dp" >

        <ImageView 
        	android:id="@+id/iv_shopping_cart"
        	android:layout_width="40dp"
        	android:layout_height="40dp"        	
        	android:layout_gravity="bottom|right"
        	android:src="@drawable/menu_shop_car_selected"  
            />
 		
        <TextView 
            android:id="@+id/tv_shopping_cart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
			android:layout_marginRight="7dp" 
			android:layout_marginBottom="11dp"         
            android:background="@drawable/corner_view"
            android:textColor="@color/white"
            android:text="0"  
            android:gravity="center"         
            />
    </FrameLayout>

    <ListView
        android:id="@+id/lv_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fly_shopping_cart" 
        android:layout_marginRight="0dp"/>

</RelativeLayout>
